<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--导航栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:background="@mipmap/daohanglan">
        <!--城市选择-->
        <TextView
            android:layout_width="80dp"
            android:gravity="center"
            android:id="@+id/chengshi"
            android:layout_height="wrap_content"
            android:text="哈尔滨"/>
        <!--搜索-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:layout_height="20dp"
            android:id="@+id/ll_sousuo"
            android:background="@drawable/yuanjiao">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/sousuo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入关键字"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>
    <!--上下滑动-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--图片轮播-->
        <com.youth.banner.Banner
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/banner">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/timg"
                android:scaleType="fitXY"/>

        </com.youth.banner.Banner>
        <!--我的团队导航栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_margin="3dp"
            android:background="#ffffff"
            android:gravity="center_vertical">
            <!--我的团队-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的团队"
                android:gravity="center"
                android:textColor="#f4000000"
                android:textSize="14sp"
                android:id="@+id/wodetuandui_tv"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#f4000000"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
            <!--红包中心-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="红包中心"
                android:textColor="#f4000000"
                android:textSize="14sp"
                android:id="@+id/hongbaozhongxin_tv"/>
            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/hongse"
                />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#f4000000"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
            <!--奖品中心-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="奖品中心"
                android:gravity="center"
                android:textColor="#f4000000"
                android:textSize="14sp"
                android:id="@+id/jiangpinzhongxin_tv"/>
        </LinearLayout>
        <!--主页功能区-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:padding="8dp"
            android:orientation="vertical">
            <!--找美食，找人才，找酒店-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/meishi"
                    android:scaleType="fitXY"
                    android:layout_marginRight="8dp"
                    android:id="@+id/meishi_img"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/rencai"
                    android:id="@+id/rencai_img"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/jiudian"
                    android:id="@+id/jiudian_img"/>
            </LinearLayout>
            <!--找工作，找东东，找房子-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/gongzuo"
                    android:id="@+id/gongzuo_img"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/dongdong"
                    android:id="@+id/dongdong_img"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/fangzi"
                    android:id="@+id/fangzi_img"/>
            </LinearLayout>
            <!--找活动，找商铺，更多-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/huodong"
                    android:id="@+id/huodong_img"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/dianpu"
                    android:id="@+id/shangpu_img"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/gengduo"
                    android:id="@+id/gengduo_img"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>